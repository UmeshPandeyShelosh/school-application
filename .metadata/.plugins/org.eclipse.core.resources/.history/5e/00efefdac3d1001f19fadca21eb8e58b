package com.security.login_security.controller;



import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;
import org.springframework.web.servlet.view.RedirectView;

import jakarta.servlet.http.HttpServletRequest;


@Controller
public class LoginSecurityController {
	
	@RequestMapping(value="/error",method = RequestMethod.GET)
	public RedirectView errorLogin(HttpServletRequest req,RedirectAttributes redirAttr ){
		RedirectView redir= new RedirectView("/error",true);
		redirAttr.addFlashAttribute("USERNAME","username");
	    return redir;
	}
	
	@RequestMapping(value="/home",method = RequestMethod.GET,produces = {"html/jsp"})
	public String loginLoginNamaste(HttpServletRequest req,RedirectAttributes redirAttr ){

		RedirectView redir= new RedirectView("/foo",true);
		redirAttr.addFlashAttribute("USERNAME","username");
	    return"login";
	}
	
	@RequestMapping(value="/welcome",method = RequestMethod.GET)
	public String welcomeNamaste(HttpServletRequest req ){
	    return"welcome";
	}
	
	@RequestMapping(value="/register",method = RequestMethod.GET)
	public String loginValidate(HttpServletRequest req,RedirectAttributes redirAttr ){

		RedirectView redir= new RedirectView("/foo",true);
		redirAttr.addFlashAttribute("USERNAME","username");
	    return"login";
	}
	
	@RequestMapping(value="/foo",method=RequestMethod.GET)
    public String handleErrorMethod() {
        return "login";
    }
	
	@RequestMapping(value="/logout",method = RequestMethod.POST)
	public String logoutValidate(HttpServletRequest req,RedirectAttributes redirAttr ){

		RedirectView redir= new RedirectView("/foo1",true);
		redirAttr.addFlashAttribute("USERNAME","username");
	    return "logout";
	}
	
	/*
	 * @RequestMapping(value="/foo1",method=RequestMethod.POST,produces =
	 * {"html/jsp"})
	 * 
	 * @ResponseBody public String handleErrorMethodLogout() { return "logout"; }
	 */

}
