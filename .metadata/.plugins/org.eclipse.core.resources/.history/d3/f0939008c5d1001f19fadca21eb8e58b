package com.security.login_security.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;
import org.springframework.web.servlet.view.RedirectView;

import jakarta.servlet.http.HttpServletRequest;


@Controller
public class LoginSecurityController {
	
	@RequestMapping(value="/error",method = RequestMethod.GET)
	public String errorLogin(HttpServletRequest reqAttr ){
	    return "welcome";
	}
	
	@RequestMapping(value="/home",method = RequestMethod.GET,produces = {"html/jsp"})
	public String loginLoginNamaste(HttpServletRequest req ){
	    return"welcome";
	}
	
	@RequestMapping(value="/welcome",method = RequestMethod.GET)
	public String welcomeNamaste(HttpServletRequest req ){
	    return"welcome";
	}
	
	@RequestMapping(value="/register",method = RequestMethod.GET)
	public String loginValidate(HttpServletRequest req ){
	    return"welcome";
	}
	
	@RequestMapping(value="/login",method=RequestMethod.GET)
    public String handleErrorMethod() {
        return "welcome";
    }
	
	@RequestMapping(value="/logout",method = RequestMethod.POST)
	public String logoutValidate(HttpServletRequest req ){
	    return "welcome";
	}
	

}
